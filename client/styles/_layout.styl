// Layout
html, body
  background light-cream
  
body
  header, footer
    text-align center
    font-family "Proxima"
    
  article
    margin 0 auto
    width 50%
    padding 2em
    
    @media mobile-max
      width 100%
    ul
      li
        font-family "Proxima"
        margin default-margin 0
    
  header
    background orange
    h1
      color white
      font-size 2.5em
      padding default-margin
      font-family "Nexa-Light"
    
    @media mobile-max
     h1
      font-size 1.5em