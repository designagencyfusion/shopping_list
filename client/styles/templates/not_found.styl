article.not-found
  text-align center
  padding 4em 0 2em
  span
    font-family "Proxima", arial, sans-serif
    font-size 1.25em
    color light-red
    margin-top 4em
    &.sad
      display inline-block
      margin 0
      width 1em
      height 1em
      padding-bottom .075em
      font-size 10em
      transform rotate(90deg)
    &.not-found
      padding-left .5em

  @media tablet-min
    font-size 1.25em
  @media tablet-horizontal-min
    font-size 1.5em
