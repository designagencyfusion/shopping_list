article.shopping-list
  #create-item
    position relative
    margin-bottom default-margin
    input
      width 100%
      margin 0
      padding-right 1.5em
      font-size 1.5em
      @media mobile-horizontal-max
        font-size 1.25em
    button
      absolute top right
      bottom 0
      box-sizing border-box
      margin 0
      width 1.25em
      padding .2em
      font-weight bold
      font-size 2em
      &:before
        icon "+"
      @media mobile-horizontal-max
        font-size 1.5em

  #new-item
    width 100%
    min-height 1em
    padding 0 0 1em
    overflow ellipsis
    font-family "Proxima", arial, sans-serif
    font-style italic
    text-align center
    color gray
    span.example
      text-shadow 1px 1px 0 white
      color very-light-gray
      font-size .9em
      padding-left .75em
    span.results:before
      display inline-block
      margin-top -.1em
      vertical-align middle
      font-size 1.5em
      font-style normal
      icon "Â·"
      color very-light-gray
    span.results > span
      padding 0 (default-padding / 2)
    span.amount
      height 1em
      color light-gray
      strong
        color turquoise
        padding 0 (default-padding / 4) 0 0

  #list
    background cream
    & > button
      width 100%
      font-size 1em
    select
      margin 0
      width 100%
    ul
      margin 0
      padding 0
      list-style none
      min-height 2em
      li.placeholder
        text-align center
        color white
      li
        position relative
        margin 0
        padding default-padding 0
        font-family "Proxima", arial, sans-serif
        border-top 1px solid light-cream
        &:not(.placeholder)
          cursor pointer

        &.bought > span > strong
          text-decoration line-through

        input
          -webkit-appearance none
          display inline-block
          position relative
          width 1em
          height 1em
          margin -.15em 0 .5em
          border 0 none
          background transparent
          vertical-align middle
          font-size 1.25emem
          font-weight bold
          cursor pointer
          &:after
            display block
            absolute top .15em left .2em
            width 1em
            height 1em
            icon "v"
            font-size 1.5em
            line-height 1em
            color transparent
          &:checked:after
            color white

        a.delete
          absolute top right
          bottom 0
          box-sizing border-box
          display block
          padding .5em .4em
          text-decoration none
          color light-cream
          font-size 1.5em
          line-height 1em
          text-align center
          &:before
            icon "x"
          &:active
            background darken(light-red, 10)

    ul li > span
      absolute left 2.75em top default-margin
      right 3.5em
      padding-right 7em
      overflow ellipsis
      span.amount
        absolute right 0 top 0
        padding-left 5em
        color gray
        width 2em
        overflow ellipsis
        strong
          absolute left
          color black
          width 5em - (default-padding / 2)
          overflow ellipsis
          text-align right

      @media mobile-horizontal-max
        font-size .9em
        margin-top .25em

      @media tablet-min
        padding-right 10em
        span.amount
          padding-left 7em
          width 4em
          strong
            width 7em - (default-padding / 2)

body:not(.touch) article.shopping-list
  #list ul li
    transition background-color 100ms linear
  #list ul li:not(.placeholder):hover
    transition background-color 0 linear
    background white
    input:after
      color lighten(cream, 10)
    input:checked:after
      color light-turquoise
    a.delete
      color light-red
    input:checked:hover:after
      color turquoise
    a.delete:hover
      background light-red
      color white

