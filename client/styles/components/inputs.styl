input:not([type="checkbox"]):not([type="radio"]):not([type="submit"]), textarea
  box-sizing border-box
  padding .25em default-padding
  margin .25em 0
  font-family "Proxima", arial, sans-serif
  border 1px solid darken(extremely-light-gray, 5)
  border-radius: 0
  background linear-gradient(top, extremely-light-gray, darken(white, 2) 15%)
  box-shadow none
  &.ng-invalid.ng-dirty
    outline 1px solid light-red
  &:focus
    outline 1px solid turquoise
    &.ng-invalid
      outline 1px solid light-red
