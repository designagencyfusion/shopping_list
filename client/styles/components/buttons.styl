button
  display inline-block
  text-decoration none
  border none
  margin 0
  padding .35em 1em
  font-size 1.5em
  font-family "Proxima", arial, sans-serif
  line-height 1em
  cursor pointer
  button-background(light-gray)

  &, &:visited
    color white

  &.action
    button-background(orange)

  &.remove, &.delete
    button-background(light-red)
