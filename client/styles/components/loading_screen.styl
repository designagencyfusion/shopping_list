#loading-screen
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(light-cream, .75)
  span
    position absolute
    display inline-block
    width 100%
    top 50%
    margin-top -.75em
    left 0
    right 0
    text-align center
    font-family "Nexa-Light", helvetica, sans-serif
    font-size 1.2em
    text-shadow 1px 1px 0 white
    color very-light-gray
